   {
     alert( "Please provide a valid  Mobile No " );
     document.facultyregistration.fphone.focus() ;
     return false;
   }
   if( document.facultyregistration.mphone.value == "" ||
           isNaN( document.facultyregistration.mphone.value) ||
           document.facultyregistration.mphone.value.length != 10 )
   {
     alert( "Please provide a valid  Mobile No " );
     document.facultyregistration.mphone.focus() ;
     return false;
   }
   return( true );
}
