<body>
                <div class="top-img">
                    <img src="/login/faculty/images/institute1.PNG" alt="" >
                </div>
    <div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
        <div class="wrapper wrapper--w790">
            <div class="card card-5">
                <div class="card-heading">
                    <h2 class="title">STUDENT PROFILE EDIT FORM</h2>
                </div>
                <div class="card-body">
                    <form action="/students/edit/{{id}}" name="studentedit" onSubmit="return(validate())" method="POST">
                        <div class="form-row">
                            <div class="name">Change Image</div>
                            <div class="value">
                                <div class="input-group">
                                  <input type="file" name="profilepic" accept="image/*">
                                  <input class="input--style-5" type="text" name="profilepic1" value="{{student.profilepic}}">
                                </div>
                            </div>
                        </div>
                        <div class="form-row m-b-55">
                            <div class="name">Mobile Number</div>
                            <div class="value">
                                <div class="row row-refine">

                                    <div class="col-9">
                                        <div class="input-group-desc">
                                            <input class="input--style-5" type="number" name="phone" value="{{student.mnumber}}" >
                                            <!--<label class="labeldesc">Phone Number</label>-->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
						<div class="form-row m-b-55">
                            <div class="name">Father Mobile Number</div>
                            <div class="value">
                                <div class="row row-refine">

                                    <div class="col-9">
                                        <div class="input-group-desc">
                                            <input class="input--style-5" type="number" name="fphone" value="{{student.fmobile}}" >
                                            <!--<label class="labeldesc">Phone Number</label>-->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
						<div class="form-row m-b-55">
                            <div class="name">Mother Mobile Number</div>
                            <div class="value">
                                <div class="row row-refine">

                                    <div class="col-9">
                                        <div class="input-group-desc">
                                            <input class="input--style-5" type="number" name="mphone" value="{{student.mmobile}}" >

                                            <!--<label class="labeldesc">Phone Number</label>-->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
						<div class="form-row">
                            <div class="name">Address</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="text" name="address" value="{{student.paddress}}" >
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Father Email</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="email" name="femail" value="{{student.femail}}" >
                                </div>
                            </div>
                        </div>
						<div class="form-row">
                            <div class="name">Mother Email</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="email" name="memail" value="{{student.memail}}">
                                </div>
                            </div>
                        </div>
                        <div>
                            <button class="btn btn--radius-2 btn--red" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="/login/faculty/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="/login/faculty/vendor/select2/select2.min.js"></script>
    <script src="/login/faculty/vendor/datepicker/moment.min.js"></script>
    <script src="/login/faculty/vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="/login/faculty/js/global.js"></script>

</body>

</html>
